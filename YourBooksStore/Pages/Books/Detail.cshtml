@page
@model YourBooksStore.Pages.Books.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h1>@Model.Book.Title</h1>

<section class="detail">
    <div class="container">
        <div class="row">
            <div class="col-1">ISN:</div>
            <div class="col-1">@Model.Book.ISN</div>
        </div>
        <div class="row">
            <div class="col-1">Author:</div> 
            <div class="col-1">@Model.Book.Author</div>
        </div>
        <div class="row">
            <div class="col-1">Price:</div> 
            <div class="col-1">@Model.Book.Price</div>
        </div>
    </div>
</section>


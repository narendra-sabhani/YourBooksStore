@page
@model YourBooksStore.Pages.Books.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Books</h1>

<form method="GET">
   <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-append">
                <button class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ISN</th>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var book in Model.Books)
    {
        <tr>
            <td>@book.ISN</td>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Category</td>            

        </tr>
    }
    </tbody>
</table>